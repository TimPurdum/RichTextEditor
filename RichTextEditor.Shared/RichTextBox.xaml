<?xml version="1.0" encoding="UTF-8"?>
<ContentView
	xmlns ="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:rte="clr-namespace:RichTextEditor"
	x:Class="RichTextEditor.RichTextBox">

	<ContentView.Content>
		<StackLayout
		Orientation="Vertical"
		Padding="4">
		<Frame
			HasShadow="false"
			Padding="0">
				<rte:HtmlEditor
					x:Name="ContentEditor"
					x:FieldModifier="public"
				/>
		</Frame>
		<StackLayout
			Orientation="Horizontal"
			x:Name="StyleRow"
			MinimumHeightRequest="100"
			>
			<Button
				x:Name="Bold"
				Text="B"
				BackgroundColor="White"
				FontAttributes="Bold" 
				BorderColor="Blue"
				BorderWidth="0.3"
				VerticalOptions="Start"
				Margin="10, 0"/>
			<Button
				x:Name="Italic"
				Text="I"
				BackgroundColor="White"
				FontAttributes="Italic" 
				BorderColor="Blue"
				BorderWidth="0.3"
				VerticalOptions="Start"
				Margin="10, 0"
			/>
			<Button
				x:Name="Underline"
				Text="U"
				BackgroundColor="White"
				BorderColor="Blue"
				BorderWidth="0.3"
				VerticalOptions="Start"
				Margin="10, 0"
			/>
			<Button
				x:Name="HTMLButton"
				Text="HTML"
				BackgroundColor="White"
				BorderColor="Blue"
				BorderWidth="0.3"
				VerticalOptions="Start"
				Margin="10, 0"
			/>
		</StackLayout>
	</StackLayout>
	</ContentView.Content>
</ContentView>
